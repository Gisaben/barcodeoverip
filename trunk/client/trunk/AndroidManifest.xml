<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tylerhjones.boip.client1"
    android:versionCode="21"
    android:versionName="1.0.1" >

    <uses-sdk android:minSdkVersion="6" android:targetSdkVersion="13"></uses-sdk>

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:description="@string/app_desc" >
        <activity
            android:name=".BoIPActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:label="@string/server_info"
            android:name=".ServerInfoActivity">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity 
            android:name=".BarcodeScannerActivity"
            android:label="@string/scanner_activity">
    		<intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
		</activity>
        <activity 
            android:name=".BoIPWidgetConfigure">
    		<intent-filter>
        		<action android:name="android.appwidget.action.APPWIDGET_CONFIGURE"/>
    		</intent-filter>
		</activity>
        
        <receiver 
            android:name=".BoIPWidgetProvider" 
            android:label="BoIP Scan Widget">
    		<intent-filter>
    	    	<action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
    	    	<action android:name="com.tylerhjones.boip.client1.BoIPWidgetProvider.ACTION_CLICK" />
    		</intent-filter>
    		<meta-data
    	    	android:name="android.appwidget.provider" 
    	    	android:resource="@xml/boip_widget_info" />
		</receiver> 
		
    </application>
        
    <support-screens
        android:anyDensity="true"
        android:largeScreens="true"
        android:normalScreens="true"
        android:smallScreens="true" />
      
</manifest>